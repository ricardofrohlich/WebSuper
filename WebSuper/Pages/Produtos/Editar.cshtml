@page "{id:int}"
@model WebSuper.Pages.Produtos.EditarModel
@{
    ViewData["Title"] = "Editar Produto";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" asp-for="Produto.Id" />

    <div class="form-group">
        <label asp-for="Produto.Descricao">Descrição</label>
        <input asp-for="Produto.Descricao" class="form-control" />
        <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Produto.Preco">Preço</label>
        <input asp-for="Produto.Preco" type="number" step="0.01" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-page="/Produtos/Index" class="btn btn-secondary">Cancelar</a>
</form>
