@page
@model ExemploAula.Pages.Produtos.IndexModel
@{
    ViewData["Title"] = "Cadastro de Produtos";
}
<h2>@ViewData["Title"]</h2>

<p><a asp-page="Criar">Cadastrar Novo Produto</a></p>

<table style="border-collapse: collapse; width: 100%;">
    <thead>
        <tr>
            <th style="border: 1px solid black; padding: 8px;">ID</th>
            <th style="border: 1px solid black; padding: 8px;">Descrição</th>
            <th style="border: 1px solid black; padding: 8px;">Preço</th>
            <th style="border: 1px solid black; padding: 8px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model.Produtos)
        {
            <tr>
                <td style="border: 1px solid black; padding: 8px;">@produto.Id</td>
                <td style="border: 1px solid black; padding: 8px;">@produto.Descricao</td>
                <td style="border: 1px solid black; padding: 8px;">
                    @produto.Preco.ToString("C", new System.Globalization.CultureInfo("pt-BR"))
                </td>
                <td style="border: 1px solid black; padding: 8px;">
                    <a class="btn btn-outline-info" asp-page="/Produtos/Detalhar" asp-route-id="@produto.Id">Detalhar</a>
                    <a class="btn btn-outline-warning" asp-page="/Produtos/Editar" asp-route-id="@produto.Id" style="margin-left: 5px;">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
